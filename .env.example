# ==============================================
# Environment Variables for Docker (Production)
# Copy this file to .env and fill in values
# ==============================================

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# JWT Secret (GANTI dengan string random yang kuat!)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Frontend URL (untuk CORS - ganti dengan IP/domain server)
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost

# API URL (untuk frontend - ganti dengan IP/domain server)
NEXT_PUBLIC_API_URL=http://localhost/api

# Redis (handled by docker-compose, no need to change)
# REDIS_URL=redis://redis:6379
